@model List<AdminTool.Models.AdminAccount>
@{
    ViewData["Title"] = L["Account_Title"].Value;
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i>@L["Account_CreateTitle"]
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 data-table">
            <thead>
                <tr>
                    <th>ID</th><th>@L["Field_Username"]</th><th>@L["Field_Role"]</th>
                    <th>@L["Field_Status"]</th>
                    <th>@L["Field_LastLogin"]</th><th>@L["Field_CreatedAt"]</th><th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td class="text-muted small">@a.Id</td>
                        <td class="fw-semibold">@a.Username</td>
                        <td>
                            @switch (a.Role)
                            {
                                case "superadmin":
                                    <span class="badge bg-danger">superadmin</span>; break;
                                case "admin":
                                    <span class="badge bg-warning text-dark">admin</span>; break;
                                default:
                                    <span class="badge bg-secondary">viewer</span>; break;
                            }
                        </td>
                        <td>
                            @if (a.IsActive)
                            { <span class="badge bg-success-subtle text-success border border-success-subtle">@L["Status_Active"]</span> }
                            else
                            { <span class="badge bg-secondary-subtle text-secondary border">@L["Status_Inactive"]</span> }
                        </td>
                        <td class="text-muted small">@(a.LastLogin?.ToString("yy-MM-dd HH:mm") ?? "â€”")</td>
                        <td class="text-muted small">@a.CreatedAt.ToString("yy-MM-dd")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@a.Id"
                               class="btn btn-sm btn-outline-secondary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="post" asp-action="Delete" asp-route-id="@a.Id"
                                  class="d-inline"
                                  onsubmit="return confirm('@string.Format(L["Account_ConfirmDelete"].Value, a.Username)')">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
