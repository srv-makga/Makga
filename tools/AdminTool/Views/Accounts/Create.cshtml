@model AdminTool.Models.CreateAccountViewModel
@{
    ViewData["Title"] = L["Account_CreateTitle"].Value;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-4">
                <form method="post" asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@L["Field_Username"]</label>
                        <input asp-for="Username" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@L["Field_Password"]</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@L["Field_ConfirmPassword"]</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-semibold">@L["Field_Role"]</label>
                        <select asp-for="Role" class="form-select">
                            <option value="viewer">viewer — @L["Role_Viewer"]</option>
                            <option value="admin">admin — @L["Role_Admin"]</option>
                            <option value="superadmin">superadmin — @L["Role_Superadmin"]</option>
                        </select>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus me-1"></i>@L["Btn_Create"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">@L["Btn_Cancel"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
