@model AdminTool.Models.DashboardViewModel
@{
    ViewData["Title"] = "ÎåÄÏãúÎ≥¥Îìú";
}

<div class="row g-3 mb-4">
    <!-- DB Status -->
    <div class="col-sm-6 col-lg-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="fs-2">üóÑÔ∏è</div>
                <div>
                    <div class="text-muted small">@L["Dashboard_Database"]</div>
                    @if (Model.DbOk)
                    { <span class="badge bg-success">@L["Status_Connected"]</span> }
                    else
                    { <span class="badge bg-danger">@L["Status_Failed"]</span> }
                </div>
            </div>
        </div>
    </div>
    <!-- Redis Status -->
    <div class="col-sm-6 col-lg-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="fs-2">‚ö°</div>
                <div>
                    <div class="text-muted small">@L["Dashboard_Redis"]</div>
                    @if (Model.RedisOk)
                    { <span class="badge bg-success">@L["Status_Connected"]</span> }
                    else
                    { <span class="badge bg-danger">@L["Status_Failed"]</span> }
                    @if (!string.IsNullOrEmpty(Model.RedisInfo))
                    { <div class="small text-muted mt-1">@Model.RedisInfo</div> }
                </div>
            </div>
        </div>
    </div>
    <!-- Server count -->
    <div class="col-sm-6 col-lg-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="fs-2">üñ•Ô∏è</div>
                <div>
                    <div class="text-muted small">@L["Dashboard_Servers"]</div>
                    <div class="fw-bold fs-5">
                        @Model.ServerStatuses.Count(s => s.IsOnline)
                        <span class="text-muted small fw-normal">/ @Model.ServerStatuses.Count @L["Dashboard_OnlineCount"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- DB table count -->
    <div class="col-sm-6 col-lg-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="fs-2">üìä</div>
                <div>
                    <div class="text-muted small">ÏïÑÏù¥ÌÖú Ïàò</div>
                    <div class="fw-bold fs-5">
                        @(Model.TableCounts.GetValueOrDefault("item", 0).ToString("N0"))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Server Status -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header fw-semibold">
                <i class="bi bi-hdd-network me-2"></i>@L["Dashboard_ServerStatus"]
            </div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@L["Field_Server"]</th><th>@L["Field_Address"]</th>
                            <th>@L["Field_Status"]</th><th>@L["Field_Latency"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.ServerStatuses)
                        {
                            <tr>
                                <td class="fw-semibold">@s.Name</td>
                                <td class="text-muted small">@s.Host:@s.Port</td>
                                <td>
                                    @if (s.IsOnline)
                                    { <span class="badge bg-success-subtle text-success border border-success-subtle">
                                        <span class="status-dot online me-1"></span>@L["Status_Online"]
                                    </span> }
                                    else
                                    { <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                        <span class="status-dot offline me-1"></span>@L["Status_Offline"]
                                    </span> }
                                </td>
                                <td class="text-muted small">@(s.PingMs.HasValue ? $"{s.PingMs}ms" : "‚Äî")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Game Data Stats -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header fw-semibold">
                <i class="bi bi-bar-chart me-2"></i>@L["Dashboard_GameStats"]
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var (tbl, cnt) in Model.TableCounts)
                    {
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center
                                        border rounded px-3 py-2">
                                <span class="text-muted small">@tbl</span>
                                <span class="fw-bold">@cnt.ToString("N0")</span>
                            </div>
                        </div>
                    }
                    @if (Model.TableCounts.Count == 0)
                    {
                        <div class="col-12 text-muted small">@L["Status_NoData"]</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
