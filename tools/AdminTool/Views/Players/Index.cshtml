@model AdminTool.Models.PlayerSearchViewModel
@{
    ViewData["Title"] = L["Player_Title"].Value;
}

<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-semibold">@L["Player_SearchTable"]</label>
                <select name="tableName" class="form-select">
                    @foreach (var t in Model.PlayerTables)
                    {
                        <option value="@t" selected="@(t == Model.TableName)">@t</option>
                    }
                </select>
                @if (Model.PlayerTables.Count == 0)
                {
                    <div class="form-text text-warning">@L["Player_NoTables"]</div>
                }
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold">@L["Player_SearchKeyword"]</label>
                <input type="text" name="query" class="form-control"
                       value="@Model.Query" placeholder="@L["Player_SearchPlaceholder"].Value" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>@L["Btn_Search"]
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Results.Count > 0)
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span class="fw-semibold">@string.Format(L["Player_ResultCount"].Value, Model.Total.ToString("N0"))</span>
            <span class="text-muted small">@L["Field_Table"]: @Model.TableName</span>
        </div>
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover mb-0 data-table">
                <thead>
                    <tr>
                        @foreach (var col in Model.Columns)
                        {
                            <th>@col.Name</th>
                        }
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Results)
                    {
                        <tr>
                            @foreach (var col in Model.Columns)
                            {
                                <td title="@row.GetValueOrDefault(col.Name)">
                                    @(row.GetValueOrDefault(col.Name)?.ToString() ?? "")
                                </td>
                            }
                            <td>
                                @{
                                    var pkCol = Model.Columns.FirstOrDefault(c => c.IsPrimaryKey);
                                    var pkVal = pkCol != null
                                        ? row.GetValueOrDefault(pkCol.Name)?.ToString() ?? ""
                                        : "";
                                }
                                @if (!string.IsNullOrEmpty(pkVal))
                                {
                                    <a asp-action="Detail" asp-route-id="@pkVal"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else if (!string.IsNullOrWhiteSpace(Model.Query))
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>@L["Status_NoResults"]
    </div>
}
