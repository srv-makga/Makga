@{
    Layout = null;
    ViewData["Title"] = "로그인";
}
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@L["Login_Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/admin.css"/>
</head>
<body class="bg-dark d-flex align-items-center justify-content-center" style="min-height:100vh;">
<div class="card shadow-lg" style="width:380px;">
    <div class="card-body p-4">
        <div class="text-center mb-4">
            <span class="fs-2">⚔️</span>
            <h4 class="mt-2 fw-bold">@L["AppTitle"]</h4>
            <p class="text-muted small">@L["Login_Subtitle"]</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2">
                <i class="bi bi-exclamation-triangle me-1"></i>@ViewBag.Error
            </div>
        }

        <form method="post" asp-action="Login" asp-controller="Auth">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />

            <div class="mb-3">
                <label class="form-label fw-semibold">@L["Field_Username"]</label>
                <input type="text" name="username" class="form-control" required autofocus
                       placeholder="@L["Field_Username"]" />
            </div>
            <div class="mb-4">
                <label class="form-label fw-semibold">@L["Field_Password"]</label>
                <input type="password" name="password" class="form-control" required
                       placeholder="@L["Field_Password"]" />
            </div>
            <button type="submit" class="btn btn-primary w-100 fw-semibold">
                <i class="bi bi-box-arrow-in-right me-1"></i>@L["Btn_Login"]
            </button>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
