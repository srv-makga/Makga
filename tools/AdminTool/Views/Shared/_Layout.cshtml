<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ‚Äî @L["AppTitle"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
<div class="d-flex" style="min-height:100vh;">

    <!-- ‚îÄ‚îÄ Sidebar ‚îÄ‚îÄ -->
    <nav class="admin-sidebar d-flex flex-column flex-shrink-0">
        <div class="sidebar-header px-3 py-4">
            <span class="fs-5 fw-bold text-white">‚öîÔ∏è @L["AppTitle"]</span>
        </div>

        <ul class="nav flex-column px-2 flex-grow-1 gap-1">
            @{
                var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
                string Cls(string c) => ctrl == c
                    ? "nav-link text-white active rounded"
                    : "nav-link text-secondary rounded";
            }
            <li class="nav-item">
                <a class="@Cls("Dashboard")" href="/Dashboard">
                    <i class="bi bi-speedometer2 me-2"></i>@L["Nav_Dashboard"]
                </a>
            </li>
            @if (User.IsInRole("superadmin"))
            {
                <li class="nav-item">
                    <a class="@Cls("Accounts")" href="/Accounts">
                        <i class="bi bi-shield-person me-2"></i>@L["Nav_Accounts"]
                    </a>
                </li>
            }
            <li class="nav-item">
                <a class="@Cls("Players")" href="/Players">
                    <i class="bi bi-controller me-2"></i>@L["Nav_Players"]
                </a>
            </li>
            <li class="nav-item">
                <a class="@Cls("GameData")" href="/GameData">
                    <i class="bi bi-table me-2"></i>@L["Nav_GameData"]
                </a>
            </li>
            <li class="nav-item">
                <a class="@Cls("Servers")" href="/Servers">
                    <i class="bi bi-hdd-network me-2"></i>@L["Nav_Servers"]
                </a>
            </li>
            <li class="nav-item">
                <a class="@Cls("Redis")" href="/Redis">
                    <i class="bi bi-database-fill-gear me-2"></i>@L["Nav_Redis"]
                </a>
            </li>
            <li class="nav-item">
                <a class="@Cls("ApiProxy")" href="/ApiProxy">
                    <i class="bi bi-cloud-arrow-up me-2"></i>@L["Nav_Api"]
                </a>
            </li>
        </ul>

        <div class="sidebar-footer px-3 py-3">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-person-circle fs-5 text-secondary"></i>
                <div class="flex-grow-1 overflow-hidden">
                    <div class="text-white small fw-semibold text-truncate">@User.Identity?.Name</div>
                    <div class="text-secondary" style="font-size:.75rem;">
                        @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                    </div>
                </div>
                <a asp-controller="Auth" asp-action="Logout" title="@L["Nav_Logout"]"
                   class="text-danger fs-5">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/Accounts/ChangePassword" class="d-block text-secondary mt-2"
                   style="font-size:.75rem;">
                    <i class="bi bi-key me-1"></i>@L["Nav_ChangePassword"]
                </a>
            }
        </div>
    </nav>

    <!-- ‚îÄ‚îÄ Main ‚îÄ‚îÄ -->
    <div class="flex-grow-1 d-flex flex-column overflow-auto bg-body-tertiary">
        <header class="bg-white border-bottom px-4 py-3 d-flex align-items-center">
            <h5 class="mb-0 fw-semibold flex-grow-1">@ViewData["Title"]</h5>
            <!-- Language switcher -->
            <form method="post" asp-controller="Culture" asp-action="Set" class="d-flex gap-1">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                <button type="submit" name="culture" value="ko"
                        class="btn btn-xs btn-outline-secondary @(System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("ko") ? "active" : "")">
                    üá∞üá∑ KO
                </button>
                <button type="submit" name="culture" value="en"
                        class="btn btn-xs btn-outline-secondary @(System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("en") ? "active" : "")">
                    üá∫üá∏ EN
                </button>
            </form>
        </header>

        <main class="p-4 flex-grow-1">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>

        <footer class="bg-white border-top px-4 py-2 text-muted small text-center">
            Makga Admin Tool
        </footer>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/admin.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
